public class Main {
    public static void main(String[] args) {
	int array[] = new int[12];
	int max=0;
	int ind=0;
	for (int i=0; i<12; i++)
    {
        array[i]=(int)Math.floor(Math.random()*31)-15;
        System.out.print(array[i] + " ");
    }
	System.out.println(" ");
	for (int i=0; i<12; i++)
    {
        if(array[i]>max)
        {
            max=array[i];
            ind=i;
        }
    }
	System.out.println("maximum:" + max);
	System.out.println("index:" + ind);
    }
}
